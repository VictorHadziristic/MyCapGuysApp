<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.victorhadziristic.thecapguysapp.StyleSelect"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/third_screen_box"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView4"
        android:layout_above="@+id/imageButton18"
        android:layout_alignParentEnd="true"
        android:columnCount="3"
        android:rowCount="4">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton19"
            android:background="@null"
            android:src="@drawable/style_flatbrim"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:onClick="style_flatbrim" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton20"
            android:src="@drawable/style_curvedbrim"
            android:background="@null"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:onClick="style_curvedbrim" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton21"
            android:paddingLeft="10dp"
            android:src="@drawable/style_fitted"
            android:background="@null"
            android:onClick="style_fitteds" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton22"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:background="@null"
            android:src="@drawable/style_snapback"
            android:onClick="style_snapbacks" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton23"
            android:background="@null"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:src="@drawable/style_strapback"
            android:onClick="style_strapbacks" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton24"
            android:src="@drawable/style_bucklebacks"
            android:paddingLeft="10dp"
            android:background="@null"
            android:onClick="style_bucklebacks" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton25"
            android:background="@null"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:src="@drawable/style_beanie"
            android:onClick="style_beanie" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton26"
            android:src="@drawable/style_pom"
            android:background="@null"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:onClick="style_pom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton27"
            android:paddingLeft="10dp"
            android:src="@drawable/style_bucket"
            android:background="@null"
            android:onClick="style_bucket" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton28"
            android:background="@null"
            android:src="@drawable/style_fedora"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:onClick="style_fedora" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton29"
            android:background="@null"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:src="@drawable/style_shirt"
            android:onClick="style_shirts" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton30"
            android:background="@null"
            android:paddingLeft="10dp"
            android:src="@drawable/style_custom"
            android:onClick="style_custom" />
    </GridLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton18"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:src="@drawable/button_submit"
        android:onClick="onFinalSubmission" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:onClick="onCancel2" />

</RelativeLayout>
