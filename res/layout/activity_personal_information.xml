<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.victorhadziristic.thecapguysapp.PersonalInformation"
    android:background="#ffffff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_FullName"
        android:hint="@string/editText_Full_Name"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:width="450dp"
        android:capitalize="words" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_Email"
        android:hint="@string/editText_Email"
        android:width="450dp"
        android:layout_below="@+id/editText_FullName"
        android:layout_alignStart="@+id/editText_FullName"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_next"
        android:id="@+id/button2"
        android:onClick="onTextDataSubmission"
        android:src="@drawable/button_next"
        android:background="@null"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:paddingStart="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cap_guys_logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/first_screen_box"
        android:layout_below="@+id/editText_Email"
        android:layout_alignParentEnd="true"
        android:paddingTop="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton31"
        android:background="@null"
        android:src="@drawable/button_clearfield"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/editText_FullName"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:onClick="clearName"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton32"
        android:background="@null"
        android:src="@drawable/button_clearfield"
        android:layout_alignTop="@+id/editText_Email"
        android:layout_toEndOf="@+id/editText_Email"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:onClick="clearEmail"/>

</RelativeLayout>
